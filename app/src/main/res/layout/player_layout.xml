<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                            <SurfaceView
                                android:id="@+id/suf"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_height="match_parent">
                                <Button
                                    android:id="@+id/control"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerHorizontal="true"
                                    android:visibility="gone"
                                    android:background="@drawable/jz_click_play_selector" />
                                <LinearLayout
                                    android:id="@+id/buffering_prompt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_below="@+id/control"
                                    android:layout_marginTop="5dp"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:adjustViewBounds="true"
                                        android:text="@string/buffering"
                                        android:textColor="#FFFFFFFF"
                                        android:textSize="13dp" />
                                    <ProgressBar
                                        style="@android:style/Widget.ProgressBar.Large"
                                        android:layout_width="40dip"
                                        android:layout_height="40dip" />
                                </LinearLayout>
                            </RelativeLayout>
                    </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_content"
                android:layout_width="match_parent"
                android:background="#65000000"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/font_online_bottom"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="心率"/>
                    <TextView
                        android:id="@+id/bottom_0"
                        android:layout_width="wrap_content"
                        android:textSize="13sp"
                        android:layout_marginTop="5dp"
                        android:text="- -"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="20dp"
                        android:layout_marginTop="3dp"
                        android:background="@color/font_online_bottom_div"
                        android:layout_height="0.5dp"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/font_online_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="RATE"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/font_online_bottom"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="速度"/>
                    <TextView
                        android:id="@+id/bottom_1"
                        android:layout_width="wrap_content"
                        android:textSize="13sp"
                        android:layout_marginTop="5dp"
                        android:text="- -"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="20dp"
                        android:layout_marginTop="3dp"
                        android:background="@color/font_online_bottom_div"
                        android:layout_height="0.5dp"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/font_online_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="SPEED"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/font_online_bottom"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="时间"/>
                    <TextView
                        android:id="@+id/bottom_2"
                        android:layout_width="wrap_content"
                        android:textSize="13sp"
                        android:layout_marginTop="5dp"
                        android:text="- -"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="20dp"
                        android:layout_marginTop="3dp"
                        android:background="@color/font_online_bottom_div"
                        android:layout_height="0.5dp"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/font_online_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="TIME"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/font_online_bottom"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="卡路里"/>
                    <TextView
                        android:id="@+id/bottom_3"
                        android:layout_width="wrap_content"
                        android:textSize="13sp"
                        android:layout_marginTop="5dp"
                        android:text="- -"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="20dp"
                        android:layout_marginTop="3dp"
                        android:background="@color/font_online_bottom_div"
                        android:layout_height="0.5dp"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/font_online_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="CAL"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/font_online_bottom"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="里程"/>
                    <TextView
                        android:id="@+id/bottom_4"
                        android:layout_width="wrap_content"
                        android:textSize="13sp"
                        android:layout_marginTop="5dp"
                        android:text="- -"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="20dp"
                        android:layout_marginTop="3dp"
                        android:background="@color/font_online_bottom_div"
                        android:layout_height="0.5dp"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/font_online_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="DIST"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/font_online_bottom"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="转速"/>
                    <TextView
                        android:id="@+id/bottom_5"
                        android:layout_width="wrap_content"
                        android:textSize="13sp"
                        android:layout_marginTop="5dp"
                        android:text="- -"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="20dp"
                        android:layout_marginTop="3dp"
                        android:background="@color/font_online_bottom_div"
                        android:layout_height="0.5dp"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/font_online_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="RPM"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/bottom_control"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dp"
                        android:background="@drawable/jz_bottom_bg"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/item0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="4"
                            android:gravity="center"
                            android:text="00:00"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                        <SeekBar
                            android:id="@+id/item1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/item2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="4"
                            android:gravity="center"
                            android:text="00:00"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <CheckBox
                            android:id="@+id/item3"
                            android:layout_width="40dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ico_voice_check"
                            android:button="@null" />

                        <CheckBox
                            android:id="@+id/item4"
                            android:layout_marginRight="5dp"
                            android:layout_width="20dp"
                            android:visibility="gone"
                            android:layout_height="20dp"
                            android:background="@drawable/ico_screen_check"
                            android:button="@null" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/control_layout1"
                    android:orientation="vertical"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/title_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_heigh">

                <include android:id="@+id/title_back" layout="@layout/common_back_layout" />

                <TextView
                    android:id="@+id/title"
                    android:layout_toRightOf="@+id/title_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="8dp"
                    android:layout_centerVertical="true"
                    android:paddingLeft="8dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_font_size" />
                <LinearLayout
                    android:id="@+id/upnp_send"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:padding="8dp"
                    android:layout_centerVertical="true"
                    android:layout_height="match_parent">
                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/home_btn_s" />

                </LinearLayout>

            </RelativeLayout>
        </FrameLayout>

</LinearLayout>