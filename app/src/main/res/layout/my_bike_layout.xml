<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_heigh"
        android:background="@drawable/shape_title_bg">

        <include layout="@layout/common_back_layout"/>



        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的单车"
            android:textColor="@color/white"
            android:textSize="@dimen/title_font_size" />
        <TextView
            android:id="@+id/title0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/title"
            android:textColor="@color/white"
            android:textSize="@dimen/title_font_size" />
        <ImageView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@mipmap/bike_share" />
    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="216">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="80">
                <TextView
                    android:id="@+id/connent_status"
                    android:layout_above="@id/bt_click"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/bt_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/bt_selector"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="250">

                    <com.hhkj.spinning.www.widget.ColorArcProgressBar
                        android:id="@+id/bike_cicle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="216"
                        app:back_color="@android:color/darker_gray"
                        app:back_width="8dp"
                        app:front_color1="@color/orange_normal"
                        app:front_color2="@color/orange_light"
                        app:front_color3="@color/orange_normal"
                        app:front_width="10dp"
                        app:is_need_content="true"
                        app:is_need_title="true"
                        app:is_need_unit="true"
                        app:string_title="未知"
                        app:string_unit="目标 0CAL"
                        app:total_engle="270" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="402">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="100"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="680">
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="40"
                            android:layout_height="match_parent"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="690"
                            android:orientation="vertical"

                            android:layout_height="match_parent">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:layout_weight="1">
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:textColor="@color/font_online_bottom"
                                            android:layout_width="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:layout_height="wrap_content"
                                            android:textSize="12sp"
                                            android:text="心率"/>
                                        <TextView
                                            android:id="@+id/bottom_0"
                                            android:layout_width="match_parent"
                                            android:gravity="center"
                                            android:textSize="13sp"
                                            android:layout_marginTop="5dp"
                                            android:text="- -"
                                            android:textColor="@color/white"
                                            android:layout_height="wrap_content" />
                                        <View
                                            android:layout_width="20dp"
                                            android:layout_marginTop="3dp"
                                            android:background="@color/font_online_bottom_div"
                                            android:layout_height="0.5dp"/>
                                        <TextView
                                            android:layout_marginTop="5dp"
                                            android:layout_marginBottom="5dp"
                                            android:textColor="@color/font_online_bottom"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="12sp"
                                            android:text="RATE"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:textColor="@color/font_online_bottom"
                                            android:layout_width="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:layout_height="wrap_content"
                                            android:textSize="12sp"
                                            android:text="速度"/>
                                        <TextView
                                            android:id="@+id/bottom_1"
                                            android:layout_width="match_parent"
                                            android:gravity="center"
                                            android:textSize="13sp"
                                            android:layout_marginTop="5dp"
                                            android:text="- -"
                                            android:textColor="@color/white"
                                            android:layout_height="wrap_content" />
                                        <View
                                            android:layout_width="20dp"
                                            android:layout_marginTop="3dp"
                                            android:background="@color/font_online_bottom_div"
                                            android:layout_height="0.5dp"/>
                                        <TextView
                                            android:layout_marginTop="5dp"
                                            android:layout_marginBottom="5dp"
                                            android:textColor="@color/font_online_bottom"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="12sp"
                                            android:text="SPEED"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:textColor="@color/font_online_bottom"
                                            android:layout_width="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:layout_height="wrap_content"
                                            android:textSize="12sp"
                                            android:text="时间"/>
                                        <TextView
                                            android:id="@+id/bottom_2"
                                            android:layout_width="match_parent"
                                            android:gravity="center"
                                            android:textSize="13sp"
                                            android:layout_marginTop="5dp"
                                            android:text="- -"

                                            android:textColor="@color/white"
                                            android:layout_height="wrap_content" />
                                        <View
                                            android:layout_width="20dp"
                                            android:layout_marginTop="3dp"
                                            android:background="@color/font_online_bottom_div"
                                            android:layout_height="0.5dp"/>
                                        <TextView
                                            android:layout_marginTop="5dp"
                                            android:layout_marginBottom="5dp"
                                            android:textColor="@color/font_online_bottom"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="12sp"
                                            android:text="TIME"/>
                                    </LinearLayout>
                                </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_weight="1">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:textColor="@color/font_online_bottom"
                                        android:layout_width="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"
                                        android:text="卡路里"/>
                                    <TextView
                                        android:id="@+id/bottom_3"
                                        android:layout_width="match_parent"
                                        android:gravity="center"
                                        android:textSize="13sp"
                                        android:layout_marginTop="5dp"
                                        android:text="- -"
                                        android:textColor="@color/white"
                                        android:layout_height="wrap_content" />
                                    <View
                                        android:layout_width="20dp"
                                        android:layout_marginTop="3dp"
                                        android:background="@color/font_online_bottom_div"
                                        android:layout_height="0.5dp"/>
                                    <TextView
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="5dp"
                                        android:textColor="@color/font_online_bottom"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"
                                        android:text="CAL"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:textColor="@color/font_online_bottom"
                                        android:layout_width="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"
                                        android:text="里程"/>
                                    <TextView
                                        android:id="@+id/bottom_4"
                                        android:layout_width="match_parent"
                                        android:gravity="center"
                                        android:textSize="13sp"
                                        android:layout_marginTop="5dp"
                                        android:text="- -"
                                        android:textColor="@color/white"
                                        android:layout_height="wrap_content" />
                                    <View
                                        android:layout_width="20dp"
                                        android:layout_marginTop="3dp"
                                        android:background="@color/font_online_bottom_div"
                                        android:layout_height="0.5dp"/>
                                    <TextView
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="5dp"
                                        android:textColor="@color/font_online_bottom"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"
                                        android:text="DIST"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:textColor="@color/font_online_bottom"
                                        android:layout_width="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"
                                        android:text="总里程"/>
                                    <TextView
                                        android:id="@+id/bottom_5"
                                        android:layout_width="match_parent"
                                        android:gravity="center"
                                        android:textSize="13sp"
                                        android:layout_marginTop="5dp"
                                        android:text="- -"
                                        android:textColor="@color/white"
                                        android:layout_height="wrap_content" />
                                    <View
                                        android:layout_width="20dp"
                                        android:layout_marginTop="3dp"
                                        android:background="@color/font_online_bottom_div"
                                        android:layout_height="0.5dp"/>
                                    <TextView
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="5dp"
                                        android:textColor="@color/font_online_bottom"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"
                                        android:text="DIST"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="40"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="100"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>