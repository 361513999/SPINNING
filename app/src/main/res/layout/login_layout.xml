<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/login_bg"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_weight="130">
        <View
            android:layout_width="0dp"
            android:layout_weight="276"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="113"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="10dp"
                android:layout_weight="1">
                <com.spinning.www.widget.CircleImageView
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:src="@mipmap/logo"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/no_color" />
            </LinearLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/login_tag"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_weight="276"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="245"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
            <View
                android:layout_width="0dp"
                android:layout_weight="185"
                android:layout_height="match_parent"/>
            <LinearLayout

                android:layout_width="0dp"
                android:layout_weight="300"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="5"
                    android:gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/login_user"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:paddingLeft="4dp"
                        android:hint="请输入手机号码"
                        android:textColor="@color/white"
                        android:background="@color/no_color"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="6dp"

                    android:background="@color/white"/>
                <LinearLayout
                    android:layout_weight="5"
                    android:gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/login_pass"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:paddingLeft="4dp"
                        android:singleLine="true"
                        android:hint="请输入验证码"
                        android:textColor="@color/white"
                        android:background="@color/no_color"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:background="@drawable/shape_btn_val"
                        android:layout_width="wrap_content"
                        android:padding="4dp"
                        android:textColor="@color/orange_normal"
                        android:layout_height="wrap_content"
                        android:text="获取验证码"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/white"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_weight="8">
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:padding="8dp"
                        android:text="@string/login_tip"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_btn_login"/>
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_weight="185"
                android:layout_height="match_parent"/>

        </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <View
                android:layout_width="80dp"
                android:layout_height="0.5dp"
                android:background="@color/login_line"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="OR"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/login_line_txt"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="80dp"
                android:layout_height="0.5dp"
                android:background="@color/login_line"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="35dp"
                android:src="@mipmap/wechat_icon"
                android:layout_marginRight="15dp"
                android:layout_height="35dp"/>
            <ImageView
                android:layout_width="35dp"
                android:src="@mipmap/qq_icon"
                android:layout_marginLeft="15dp"
                android:layout_height="35dp"/>


        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>