<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_heigh"
        android:background="@drawable/shape_title_bg">

        <include layout="@layout/common_back_layout"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:text="意见反馈"
            android:textSize="@dimen/title_font_size" />
        <TextView
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="提交"
            android:textColor="@color/font_normal"
            android:textSize="18sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="8dp"
        android:focusableInTouchMode="true"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/item0"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:hint="请输入意见标题"
            android:textSize="17sp"
            android:textColor="@color/font_normal"
            android:textColorHint="@color/font_light"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@drawable/bg_personage"
            android:layout_height="wrap_content"
            />
        <EditText
            android:id="@+id/item1"
            android:textSize="13sp"
            android:textColorHint="@color/font_light"
            android:layout_marginTop="8dp"
            android:textColor="@color/font_normal"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:gravity="left|top"
            android:singleLine="true"
            android:background="@drawable/bg_personage"
            android:hint="请输入意见内容"
            android:layout_height="match_parent"
            />

    </LinearLayout>

</LinearLayout>