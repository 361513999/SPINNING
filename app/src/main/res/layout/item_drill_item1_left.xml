<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_left0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/video_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="207">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="60" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="80"
                    android:gravity="center">

                    <com.hhkj.spinning.www.widget.CircleImageView
                        android:id="@+id/item_left1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/logo"
                        app:civ_border_color="@color/no_color"
                        app:civ_border_width="2dp" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="60" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:paddingRight="3dp"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_weight="175">
                <TextView
                    android:id="@+id/item_left2"
                    android:layout_width="match_parent"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_left3"
                    android:layout_width="match_parent"
                    android:textSize="13sp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_left4"
                    android:layout_width="match_parent"
                    android:textSize="15sp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/item_left6"
                    android:layout_width="wrap_content"
                    android:ems="5"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textSize="13sp"
                    android:textColor="#A56A33"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape_title_bg"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>